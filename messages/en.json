    "stageInstructions": {
        "A-01": {
            "title": "GMP Certificate",
            "hint": "Upload the current Good Manufacturing Practices certificate.",
            "evaluates": "Certificate validity, issuing authority, pharmaceutical forms covered"
        },
        "A-02": {
            "title": "CPP / Free Sale Certificate",
            "hint": "Upload the Certificate of Pharmaceutical Product or Free Sale Certificate.",
            "evaluates": "Certificate validity, product mentioned, country of origin"
        },
        "A-03": {
            "title": "Holder Declaration",
            "hint": "Upload the signed declaration about international regulatory status.",
            "evaluates": "Legal representative signature, registration status"
        },
        "A-04": {
            "title": "Legal Power of Attorney",
            "hint": "Upload the notarized power of attorney for ARCSA Ecuador.",
            "evaluates": "Valid notarized power, explicit authorization"
        },
        "B-01": {
            "title": "Development & Manufacturing",
            "hint": "Upload product development documents (single or multiple files). Must contain: Product Description, Manufacturing Process, Formula, IPC, Flowchart, Overages.",
            "evaluates": "Product description, manufacturing process, formula, IPC, flowchart, overages, overall consistency"
        },
        "B-02": {
            "title": "Raw Materials / API CoA",
            "hint": "Upload ONE file for EACH raw material.",
            "evaluates": "CoA for each API, manufacturer identified"
        },
        "B-03": {
            "title": "Quality Specifications",
            "hint": "Upload finished product specifications.",
            "evaluates": "Parameters for each API, assay limits"
        },
        "B-04": {
            "title": "Qualitative-Quantitative Formula",
            "hint": "Upload complete formula with all components.",
            "evaluates": "Complete list of APIs, excipients"
        },
        "B-05": {
            "title": "Formula Justification",
            "hint": "Upload justification for each excipient.",
            "evaluates": "Justification for each excipient, references"
        },
        "B-06": {
            "title": "Excipients Declaration",
            "hint": "Upload declaration of permitted excipients.",
            "evaluates": "List of excipients, colorants, preservatives"
        },
        "B-07": {
            "title": "Manufacturing Process",
            "hint": "Upload the manufacturing process description.",
            "multiHint": "May include:\n• Narrative process description\n• Relevant SOPs (granulation, mixing, etc.)",
            "evaluates": " EVALUATED:\n• Critical stages identified\n• Process parameters (T°, time)\n• In-process controls\n• Consistency with B-08"
        },
        "B-08": {
            "title": "Process Flowchart",
            "hint": "Upload the manufacturing process flow diagram.",
            "multiHint": "May include:\n• General flowchart\n• Flowcharts by area (weighing, production, packaging)",
            "evaluates": " EVALUATED:\n• Clear and complete flowchart\n• Consistency with B-07\n• Control points identified\n• Input/output materials"
        },
        "B-09": {
            "title": "Analytical Methodology",
            "hint": "Upload analytical methods and validation reports.",
            "multiHint": "Must include for each API:\n• Identification method\n• Assay method\n• Impurities method (if applicable)\n• Validation reports",
            "evaluates": " EVALUATED:\n• ID + Assay method for each API\n• Analytical technique (HPLC, UV, etc.)\n• Validation status\n• Parameters: accuracy, precision, linearity\n• Consistency with B-01 and B-03"
        },
        "B-10": {
            "title": "Batch Code",
            "hint": "Upload the SOP for batch code numbering and structure.",
            "evaluates": " EVALUATED:\n• Code structure explained\n• Traceability guaranteed\n• Consistency with batches in other documents"
        },
        "B-11": {
            "title": "Primary/Secondary Packaging",
            "hint": "Upload the description and specifications of packaging materials.",
            "evaluates": " EVALUATED:\n• Packaging materials described\n• Material specifications\n• Product compatibility\n• Consistency with C-01 (stability)"
        },
        "C-01": {
            "title": "Stability Studies",
            "hint": "Upload the product stability studies.",
            "multiHint": "Must include:\n• Accelerated stability (minimum)\n• Long-term stability (recommended)\n• ONE file per batch/condition\n• Each API evaluated individually",
            "evaluates": " EVALUATED:\n• Type: accelerated/long-term\n• Conditions (T°, humidity)\n• EACH API evaluated per timepoint\n• Batches consistent with B-01\n• Shelf life support from C-02\n• Trends and results"
        },
        "C-02": {
            "title": "Protocol and Shelf Life",
            "hint": "Upload the stability protocol and proposed shelf life conclusion.",
            "evaluates": " EVALUATED:\n• Defined protocol\n• Shelf life justified by C-01\n• Storage conditions\n• Consistency with labels C-05"
        },
        "C-03": {
            "title": "Chromatograms / Records",
            "hint": "Upload chromatograms and analytical records.",
            "multiHint": "Must include:\n• Assay chromatograms for each API\n• Impurity chromatograms\n• Dissolution records (if applicable)\n• ONE file per analysis type",
            "evaluates": " EVALUATED:\n• Chromatograms for each API\n• Methods consistent with B-09\n• Batches traceable to B-01 and C-01\n• Analysis date\n• Integration and results"
        },
        "C-04": {
            "title": "Clinical/Pharmacological Support",
            "hint": "Upload bibliography and efficacy support for the product.",
            "evaluates": " EVALUATED:\n• Supporting bibliography\n• Efficacy justification\n• Combination justification (FDC)\n• References to official guidelines"
        },
        "C-05": {
            "title": "Labels",
            "hint": "Upload all product labels.",
            "multiHint": "Must include:\n• Primary label (immediate container)\n• Secondary label (box/carton)\n• Package insert or leaflet\n• One for each commercial presentation",
            "evaluates": " EVALUATED:\n• Primary + Secondary + Insert present\n• Composition = B-04\n• Shelf life = C-02\n• Storage conditions = C-01\n• Manufacturer = A-01\n• All presentations covered"
        },
        "E-01": {
            "title": "Additional Documentation",
            "hint": "Upload any additional required documentation.",
            "evaluates": " EVALUATED:\n• Complete documentation\n• Correct format\n• Relevant information"
        }
    },
